
<%- include('partials/header') -%>
    <div class="flex flex-col items-center justify-between">
        <% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <form class="login-form w-11/12 my-6 py-2 px-4 bg-gradient-to-r from-orange-300 to-yellow-200 flex flex-col items-start justify-between rounded-lg" action="/signup" method="POST">
            <label class="font-semibold py-2" for="userName">User Name:</label>
            <input class="mb-4" type="text" name="userName" placeholder="User Name">

            <label class="font-semibold py-2" for="email">Email:</label>
            <input class="mb-4" type="email" name="email" placeholder="Email">

            <label class="font-semibold py-2" for="password">Password:</label>
            <input class="mb-4" type="password" name="password" placeholder="Password">

            <label class="font-semibold py-2" for="confirmPassword">Confirm Password:</label>
            <input class="mb-4" type="password" name="confirmPassword" placeholder="Confirm Password">

            <input class="block w-28 button self-end my-6 bg-purple-400 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded-md cursor-pointer" type="submit">
            <a href="/" class="w-28 self-end my-3 bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-md cursor-pointer text-center">Back</a>
        </form>
    </div>
<%- include('partials/footer') -%>