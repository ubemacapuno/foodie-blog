<%- include('partials/header') -%>
    <div class="flex flex-col items-center justify-between">
        <% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <% if (locals.messages.info) { %>
            <% messages.info.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <form class="login-form w-11/12 my-6 py-2 px-4 bg-gradient-to-r from-orange-300 to-yellow-200 flex flex-col items-start justify-between rounded-lg" action="/login" method="POST">
            <label class="font-semibold py-2" for="email">Email:</label>
            <input type="email" name="email" placeholder="Email" class="mb-4">

            <label class="font-semibold py-2" for="password">Password:</label>
            <input type="password" name="password" placeholder="Password" class="mb-4">

            <input class="block w-22 button self-end my-6 bg-purple-400 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded-md cursor-pointer" type="submit">
            <a href="/signup" class="block w-22 self-end my-3 bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-md cursor-pointer text-center">Signup</a>
        </form>
    </div>
<%- include('partials/footer') -%>